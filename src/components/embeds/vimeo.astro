---
interface Props {
  id: string;
  autoplay: boolean;
  loop: boolean;
  title: boolean;
  byline: boolean;
  portrait: boolean;
  mute: boolean;
}
const { id, autoplay, loop, title, byline, portrait, mute } = Astro.props;
const asStr = (value: boolean) => (value ? "1" : "0");
---

<div class="vimeo-embed">
  <iframe
    src={`https://player.vimeo.com/video/${id}?autoplay=${asStr(
      autoplay
    )}&loop=${asStr(loop)}&muted=${asStr(mute)}&title=${asStr(
      title
    )}&byline=${asStr(byline)}&portrait=${asStr(portrait)}`}
    allow="autoplay; fullscreen"
    allowfullscreen></iframe>
</div>

<style>
  .vimeo-embed {
    position: relative;
    padding: 56.25% 0 0 0;
  }
  .vimeo-embed iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }
</style>
